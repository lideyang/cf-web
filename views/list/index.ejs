<link rel="stylesheet" href="/assets/dist/css/user.css">
<style>
	html, body, .page {
		height: 100%;
	}
	#wrapper {
		position: absolute;
		top: 49px;
		bottom: 0;
		overflow: hidden;
		margin: 0;
		width: 100%;
		background-color: #fff;
	}
	.list-info{
		padding: 0!important;
	}
	.am-list {
		margin: 0;
	}

	.am-list > li {
		background: none;
		box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
	}

	.pull-action {
		text-align: center;
		height: 45px;
		line-height: 45px;
		color: #999;
	}

	.pull-action .am-icon-spin {
		display: none;
	}

	.pull-action.loading .am-icon-spin {
		display: block;
	}

	.pull-action.loading .pull-label {
		display: none;
	}
</style>
<div class="page">
	<!--头部开始-->
	<div class="am-g list-header">
		<!--header-->
		<header data-am-widget="header" class="am-header am-header-default">
			<div class="am-header-left am-header-nav">
				<a href="javascript:history.go(-1)" class="">
					<i class="am-header-icon am-icon-angle-left"></i>
				</a>
			</div>
			<h1 class="am-header-title">
				<a href="#title-link" class="">
					<%= title.substring(title.indexOf('-') + 1, title.length) %>
				</a>
			</h1>
			<div class="am-header-right am-header-nav">
				<a href="#right-link" class="">
                <span class="am-header-nav-title">
                    月榜单
                </span>
				</a>
			</div>
		</header>
	</div>
	<!--内容开始-->
	<div id="topList" class="am-g list-banner">
		<div class="am-u-sm-4">
			<div class="pic-boxer">
				<img class="am-round" src="/assets/dist/images/panda.jpg"/>
				<span class="am-badge am-round">2</span>
			</div>
			<p>Steven</p>
			<p class="text-miss time">10:12:31</p>
			<p>￥513254</p>
		</div>
		<div class="am-u-sm-4">
			<div class="pic-boxer">
				<img class="am-round" style="max-width: 80px;margin-top: -10px;" src="/assets/dist/images/panda.jpg"/>
				<span class="am-badge am-round" style="background-color: #e1a145">1</span>
			</div>
			<p>Tony</p>
			<p class="text-miss time">10:12:31</p>
			<p>￥513254</p>
		</div>
		<div class="am-u-sm-4">
			<div class="pic-boxer">
				<img class="am-round" src="/assets/dist/images/panda.jpg"/>
				<span class="am-badge am-round" style="background-color: #80521c">3</span>
			</div>
			<p>Jock</p>
			<p class="text-miss time">10:12:31</p>
			<p>￥513254</p>
		</div>
	</div>
	<div id="wrapper" class="trade-record">
			<div class="am-list-bd">
				<div class="pull-action" id="pull-down">
					<span class="am-icon-arrow-down pull-label" id="pull-down-label"> 下拉刷新</span>
					<span class="am-icon-spinner am-icon-spin"></span>
				</div>
				<ul id="events-list" class="am-list am-list-static choose-goods-list list-info">
					<li class="am-list-item-desced">
						<div class="am-list-item-text">
							正在加载内容...
						</div>
					</li>
				</ul>
				<div class="pull-action" id="pull-up">
					<span class="am-icon-arrow-down pull-label" id="pull-up-label"> 上拉加载更多</span>
					<span class="am-icon-spinner am-icon-spin"></span>
				</div>
			</div>
		</div>
</div>
<script src="/assets/dist/js/seajs/sea.js" id="seajsnode"></script>
<script>
	seajs.use("list/index", function (main) {
		window.onload=function(){
			main.init();
		}
	});
</script>

<script type="text/x-handlebars-template" id="tpi-list-item">
	{{#each this}}
	<li class="{{#if my}}my{{/if}}">
		<a href="#">
			<div class="am-g am-g-collapse display-table choose-game-info">
				<div class="am-u-sm-4 display-table-cell am-text-middle">
					<i class="am-text-middle text-muted num">{{@index}}</i>
					<img class="am-img-thumbnail am-radius" src="/assets/dist/images/game1.png" alt="info">
				</div>
				<div class="am-u-sm-6 display-table-cell am-text-middle">
					<h3>{{status}}</h3>
					<p class="text-miss">{{time}}</p>
				</div>
				<div class="am-u-sm-2 display-table-cell am-text-middle">
					<span class="text-miss money">￥{{money}}</span>
				</div>
			</div>
		</a>
	</li>
	{{/each}}
</script>