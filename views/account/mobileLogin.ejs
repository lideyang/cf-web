<link rel="stylesheet" href="/assets/dist/css/account.css">
<div class="am-g">
  <!-- login -->
  <div class="am-u-sm-8 am-u-sm-centered login-header">
    <div class="login-header-layer">
      <div class="login-header-inner">
        <img src="/assets/dist/images/login.png" alt="login" />
        <span class="am-serif text-info">众筹新玩法</span>
      </div>
    </div>
  </div>
  <!--<div class="am-text-center loading-txt" id="loadingTxt">-->
      <!--<img src="/assets/dist/images/loading_txt.png" alt="loading" />-->
  <!--</div>-->
  <div class="am-u-sm-10 am-u-sm-centered login-container" id="loginContainer">
    <!--登录表单-->
    <form id="mobileLoginForm" action="/account/settingPwd" class="am-form" method="get">
      <div class="am-form-group am-form-icon">
        <i class="am-icon-user text-info"></i>
        <input id="loginId" name="loginId" type="text" class="am-form-field" placeholder="请输入手机号码" required>
        <i class="am-icon-times-circle text-miss"></i>
      </div>
      <div class="am-form-group am-form-icon check-code">
        <i class="am-icon-key text-info"></i>
        <input id="checkCode" name="code" type="text" class="am-form-field" placeholder="请输入验证码">
        <button id="checkCodeBtn" type="button" class="am-btn am-btn-primary am-radius am-btn-xs check-code-btn">获取验证码</button>
      </div>
      <div class="submit-group">
        <button type="submit" class="am-btn am-btn-primary am-btn-block am-radius">登录</button>
      </div>
    </form>
    <!--忘记密码-->
    <div class="am-cf forget-pwd am-text-center">
      <a href="/account/login" class="text-miss">账号密码登录</a>
    </div>
    <div class="divider text-miss">
      <h4>其他登录方式</h4>
    </div>
    <div class="am-u-sm-8 am-u-sm-centered other-login">
      <a class="am-btn am-btn-primary am-btn-xs am-radius" href="#">
        <i class="am-icon-weixin"></i>
      </a>
      <a class="am-btn am-btn-primary am-btn-xs am-radius" href="#">
        <i class="am-icon-qq"></i>
      </a>
    </div>
  </div>
</div>
<% include footer %>
<script>
  seajs.use(['account/mobileLogin','tools'], function (main,tools) {
    main.init();
    main.validator();
    main.countDown();
    tools.inputValueClear('input');
  })
</script>